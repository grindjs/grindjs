#!/usr/bin/env bash

strip_babel() {
	cp "$1" "$1-tmp"
	cat "$1-tmp" | sed "s/require('babel-register')//g" > "$1"
	rm "$1-tmp"
}

echo "Cleaning up old build"
rm -fr lib

echo "Building"
mkdir lib lib/app lib/boot
babel -s inline -d lib/app/ app/
babel -s inline -d lib/boot/ boot/

echo "Setting up bins"
cp -R bin lib/bin
rm lib/bin/build lib/bin/lint

strip_babel lib/boot/Cli.js
chmod +x lib/bin/*

echo "Done"
